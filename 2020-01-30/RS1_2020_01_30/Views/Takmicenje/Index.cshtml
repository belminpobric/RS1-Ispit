@model SkolePrikazVM
@{
    ViewData["Title"] = "Index";
}
<h2>Korisnik moze odabrati</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Odaberi" method="post">
            <div class="form-group">
                <label asp-for="SkolaID" class="control-label">Skola</label>
                <select asp-for="SkolaID" asp-items="Model.SkolaDomacin"></select>
            </div>
            <div class="form-group">
                <label asp-for="RazredID" class="control-label">Razred</label>
                <select asp-for="RazredID" asp-items="Model.Razred"></select>
            </div>
            <div class="form-group">
                <button type="submit" value="Odaberi" class="btn btn-default">Odaberi</button>
            </div>
        </form>
    </div>
</div>